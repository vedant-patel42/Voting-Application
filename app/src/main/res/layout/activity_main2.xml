<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/txtmname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mimage"
        android:layout_alignParentTop="true"
        android:layout_marginTop="34dp"
        android:text="Narendra Modi" />

    <ImageView
        android:id="@+id/mimage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:scaleType="fitStart"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/mdes"
        android:layout_width="224dp"
        android:layout_height="81dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="137dp"
        android:text="Prime Minister of India" />

    <Button
        android:id="@+id/mbtprv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="80dp"
        android:text="Previous" />

    <Button
        android:id="@+id/mbtnext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/mbtprv"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="44dp"
        android:text="Next" />

    <Button
        android:id="@+id/mbtsubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="17dp"
        android:text="Submit" />
</RelativeLayout>